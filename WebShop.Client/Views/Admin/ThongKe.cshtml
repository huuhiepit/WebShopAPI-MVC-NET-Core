@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Thống kê";
}

<h1 class="h3 mb-2 text-gray-800">Thống kê - Báo cáo</h1>

<!-- DataTales Example -->

<div class="card shadow mb-4">
