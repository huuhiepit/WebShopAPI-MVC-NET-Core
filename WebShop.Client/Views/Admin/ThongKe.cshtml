@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Thống kê";
}

<h1 class="h3 mb-2 text-gray-800">Thống kê - Báo cáo</h1><br />

<!-- DataTales Example -->
<div id="thongke_DT">
    Từ ngày: <input type="date" name="dateStart"> &nbsp;&nbsp;&nbsp;&nbsp; 
    Đến ngày: <input type="date" name="dateEnd"> &nbsp;&nbsp;&nbsp;&nbsp; 
    <input type="button" onclick="handleDoanhThu()" value="Duyệt"/>
</div><br>
<div class="card shadow mb-4">
    <div class="card-header py-3 row">
        <h6 class="m-0 font-weight-bold text-primary">Thống kê doanh thu</h6><br />
    </div>
    <div class="card-body">
        <div class="table-responsive">
                                
            <table class="table table-bordered" id="dataTableDoanhThu" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã đơn hàng</th>
                        <th>Ngày đặt hàng</th>
                        <th>Tổng tiền</th>
                    </tr>
                 </thead>
                <tbody id="load_data_DoanhThu">
                    
                </tbody>
            </table>
        </div>
        <div id="doanhThu"></div>
    </div>
</div>

<script src="~/Script/Admin/ThongKe.js"></script>
